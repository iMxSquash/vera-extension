{
    "manifest_version": 3,
    "name": "Vera Text Selector",
    "version": "1.0.0",
    "description": "Sélectionnez du texte et envoyez-le à Vera pour vérification",
    "permissions": [
        "activeTab",
        "scripting",
        "contextMenus",
        "storage"
    ],
    "host_permissions": [
        "https://vera-g6.vercel.app/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}